{
  "name": "tune8",
  "version": "1.0.0",
  "description": "Tune8 monorepo with NestJS API and Next.js frontend",
  "private": true,
  "scripts": {
    "dev": "lerna run start:dev --parallel",
    "dev:api": "lerna run start:dev --scope=@tune8/api",
    "dev:frontend": "lerna run start:dev --scope=@tune8/frontend",
    "/": "/",
    "build": "lerna run build",
    "build:api": "lerna run build --scope=@tune8/api",
    "build:frontend": "lerna run build --scope=@tune8/frontend",
    "//": "//",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format": "lerna run format",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,css,md}\""
  },
  "keywords": [
    "monorepo",
    "nestjs",
    "nextjs",
    "api",
    "frontend",
    "8"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "lerna": "^8.2.3",
    "prettier": "^3.0.0"
  }
}
